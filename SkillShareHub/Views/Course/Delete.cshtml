@model SkillShareHub.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<h4>Are you sure you want to delete this course?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyCourses" class="btn btn-secondary">Cancel</a>
</form>
