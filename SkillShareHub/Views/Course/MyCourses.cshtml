@model IEnumerable<SkillShareHub.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Create New Course</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven’t created any courses yet.</div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- Course Image -->
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height:180px; object-fit:cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height:180px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }

                <div class="card-body d-flex flex-column">
                    <!-- Title -->
                    <h5 class="card-title">@course.Title</h5>

                    <!-- Shortened description -->
                    <p class="card-text text-muted">
                        @(course.Description.Length > 100
                                            ? course.Description.Substring(0, 100) + "..."
                                            : course.Description)
                </p>

                        <!-- Category + Price -->
                        <p>
                            <span class="badge bg-info">@course.Category?.Name</span>
                            <span class="fw-bold float-end">@course.Price.ToString("C")</span>
                        </p>

                        <!-- Status -->
                        <p>
                    @if (course.Status == SkillShareHub.Models.CourseStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (course.Status == SkillShareHub.Models.CourseStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </p>

                        <small class="text-muted">Created: @course.CreatedAt.ToString("yyyy-MM-dd")</small>
                    </div>

                    <!-- Card Footer (Actions) -->
                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
